@{
}

@model List<studentWebPage.Models.Entities.Student>

<h1>Students</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Subscribed</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.Id</td>
                <td>@student.Name</td>
                <td>@student.Email</td>
                <td>@student.Phone</td>
                <td>@student.Subscribed</td>
                <td>
                    <a class="btn btn-primary" asp-controller="Students" asp-action="Edit" asp-route-id="@student.Id">Edit</a>
                </td>
                <td>
                    <form asp-action="Delete" asp-controller="Students" method="post">
                    <input type="hidden" name="id" value="@student.Id" />
            
                    <button type="submit" class="btn btn-danger ms-3">
                        Delete
                    </button>
                    </form>
                </td>
            </tr>
            
        }

    </tbody>
</table>